@model IEnumerable<TaskManagerWebApp.Models.TaskItem>

@{
    ViewData["Title"] = "Task Manager";
    var allActive = ViewBag.CurrentFilter == "all" || ViewBag.CurrentFilter == null ? "active" : "";
    var activeActive = ViewBag.CurrentFilter == "active" ? "active" : "";
    var completedActive = ViewBag.CurrentFilter == "completed" ? "active" : "";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Task Manager</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>

    <div>
        @* use get method to preserve search URL and bookmark it if needed *@
        <form class="form-inline my-2 my-lg-0" asp-controller="TaskItems" asp-action="Index" method="get">
            <div class="row">
                <div class="col-8 col-md-6">
                    <input name="searchString" class="form-control my-3" type="search" placeholder="Search by task title or description..." aria-label="Search" value="@ViewBag.CurrentSearch">
                </div>
                <div class="col-4 col-md-2">
                    <button class="btn btn-primary my-3" type="submit"><i class="bi bi-search"></i> Search</button>
                </div>
            </div>
            @* upon submititng this form, we'll lose the filter value if we don't submit its current value again within the form *@
            <input type="hidden" name="filter" value="@ViewBag.CurrentFilter" />
            
        </form>
    </div>
    <!-- Filter Tabs -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-filter="all" asp-route-searchString="@ViewBag.CurrentSearch"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "all" || ViewBag.CurrentFilter == null ? "active" : "")">
                All Tasks
            </a>
            <a asp-action="Index" asp-route-filter="active" asp-route-searchString="@ViewBag.CurrentSearch"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "active" ? "active" : "")">
                Active
            </a>
            <a asp-action="Index" asp-route-filter="completed" asp-route-searchString="@ViewBag.CurrentSearch"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "completed" ? "active" : "")">
                Completed
            </a>
        </div>
    </div>

    <!-- Desktop -->
    <div class="d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 50px;">Status</th>
                        <th>Task</th>
                        <th>Priority</th>
                        <th style="width: 150px;">Created</th>
                        <th style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox"
                                               @(item.IsCompleted ? "checked" : "")
                                               onchange="this.form.submit()">
                                    </div>
                                </form>
                            </td>
                            <td>
                                <div>
                                    <strong class="@(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="text-muted mb-0 small">@item.Description</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <p class="fw-bold @(item.Priority == Priority.High ? "text-danger" : item.Priority == Priority.Medium ? "text-warning" : "text-primary")">@item.Priority</p>
                            </td>
                            <td class="text-muted small">
                                @item.CreatedDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile -->
    <div class="d-md-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="form-check form-switch">
                            <form id="toggle-form-@item.Id" asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-none">
                                <input class="form-check-input" type="checkbox"
                                       @(item.IsCompleted ? "checked" : "")>
                            </form>
                       
                        </div>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                    <h5 class="card-title @(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h5>
                    <h5>
                        <p>@item.Priority</p>
                    </h5>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="card-text text-muted">@item.Description</p>
                    }

                    <p class="card-text">
                        <small class="text-muted">Created: @item.CreatedDate.ToString("MMM dd, yyyy")</small>
                    </p>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-check2-circle display-1 text-muted"></i>
            <h3 class="mt-3">No tasks found</h3>
        </div>
    }
</div>

<!-- Delete Modals -->
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong>@item.Title</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
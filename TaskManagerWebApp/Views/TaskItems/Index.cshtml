@model TaskManagerWebApp.ViewModels.PaginatedTasksViewModel<TaskItem>

@{
    ViewData["Title"] = "Task Manager";
    var allActive = Model.Filter == "all" || Model.Filter == null ? "active" : "";
    var activeActive = Model.Filter == "active" ? "active" : "";
    var completedActive = Model.Filter == "completed" ? "active" : "";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Task Manager</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>

    <!-- Search Box -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <!-- Hidden fields to preserve current state -->
            <input type="hidden" name="filter" value="@Model.Filter" />
            <input type="hidden" name="pageSize" value="@Model.PageSize" />

            <input type="text" class="form-control"
                   name="searchString"
                   value="@Model.SearchString"
                   placeholder="Search tasks...">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="bi bi-search"></i>
            </button>
            @if (!string.IsNullOrEmpty(Model.SearchString))
            {
                <a asp-action="Index"
                   asp-route-filter="@Model.Filter"
                   asp-route-pageSize="@Model.PageSize"
                   class="btn btn-outline-danger">
                    Clear
                </a>
            }
        </div>
    </form>

    <!-- Filter Tabs and Page Size Selector -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-filter="all"
               asp-route-searchString="@Model.SearchString"
               asp-route-pageSize="@Model.PageSize"
               class="btn btn-outline-primary @(Model.Filter == "all" ? "active" : "")">
                All Tasks
            </a>
            <a asp-action="Index" asp-route-filter="active"
               asp-route-searchString="@Model.SearchString"
               asp-route-pageSize="@Model.PageSize"
               class="btn btn-outline-primary @(Model.Filter == "active" ? "active" : "")">
                Active
            </a>
            <a asp-action="Index" asp-route-filter="completed"
               asp-route-searchString="@Model.SearchString"
               asp-route-pageSize="@Model.PageSize"
               class="btn btn-outline-primary @(Model.Filter == "completed" ? "active" : "")">
                Completed
            </a>
        </div>

        <!-- Page Size Selector -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                    data-bs-toggle="dropdown" aria-expanded="false">
                Show: @Model.PageSize per page
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" asp-action="Index"
                       asp-route-pageSize="3"
                       asp-route-filter="@Model.Filter"
                       asp-route-searchString="@Model.SearchString">3 per page</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-action="Index"
                       asp-route-pageSize="5"
                       asp-route-filter="@Model.Filter"
                       asp-route-searchString="@Model.SearchString">5 per page</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-action="Index"
                       asp-route-pageSize="10"
                       asp-route-filter="@Model.Filter"
                       asp-route-searchString="@Model.SearchString">10 per page</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Items Count Display -->
    @if (Model.TotalItems > 0)
    {
        <div class="text-muted mb-3">
            Showing @Model.FirstItemIndex-@Model.LastItemIndex of @Model.TotalItems tasks
        </div>
    }

    <!-- Desktop -->
    <div class="d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 50px;">Status</th>
                        <th>Task</th>
                        <th>Priority</th>
                        <th style="width: 150px;">Created</th>
                        <th style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox"
                                               @(item.IsCompleted ? "checked" : "")
                                               onchange="this.form.submit()">
                                    </div>
                                </form>
                            </td>
                            <td>
                                <div>
                                    <strong class="@(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="text-muted mb-0 small">@item.Description</p>
                                    }
                                </div>
                            </td>
                            <td>
                                <p class="fw-bold @(item.Priority == Priority.High ? "text-danger" : item.Priority == Priority.Medium ? "text-warning" : "text-primary")">@item.Priority</p>
                            </td>
                            <td class="text-muted small">
                                @item.CreatedDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile -->
    <div class="d-md-none">
        @foreach (var item in Model.Data)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="form-check form-switch">
                            <form id="toggle-form-@item.Id" asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-none">
                                <input class="form-check-input" type="checkbox"
                                       @(item.IsCompleted ? "checked" : "")>
                            </form>
                       
                        </div>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                    <h5 class="card-title @(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h5>
                    <h5>
                        <p>@item.Priority</p>
                    </h5>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="card-text text-muted">@item.Description</p>
                    }

                    <p class="card-text">
                        <small class="text-muted">Created: @item.CreatedDate.ToString("MMM dd, yyyy")</small>
                    </p>
                </div>
            </div>
        }
    </div>

    @if (!Model.Data.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-check2-circle display-1 text-muted"></i>
            <h3 class="mt-3">No tasks found</h3>
            @if (!string.IsNullOrEmpty(Model.SearchString))
            {
                <p class="text-muted">No tasks match your search: "@Model.SearchString"</p>
            }
            else if (Model.Filter != "all")
            {
                <p class="text-muted">No @Model.Filter tasks found</p>
            }
            else
            {
                <p class="text-muted">Add your first task by clicking "Add New Task"</p>
            }
        </div>
    }

</div>

<!-- Pagination -->
<div class="mt-4">
    <partial name="_Pagination" model="Model" />
</div>

<!-- Delete Modals -->
@foreach (var item in Model.Data)
{
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong>@item.Title</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <input type="hidden" name="currentFilter" value="@Model.Filter" />
                        <input type="hidden" name="currentSearchString" value="@Model.SearchString" />
                        <input type="hidden" name="currentPageNumber" value="@Model.PageNumber" />
                        <input type="hidden" name="currentPageSize" value="@Model.PageSize" />
                    </form>
                </div>
            </div>
        </div>
    </div>
}
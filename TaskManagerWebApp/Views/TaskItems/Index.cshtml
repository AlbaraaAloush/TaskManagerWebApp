@model IEnumerable<TaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Task Manager";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Task Manager</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>

    <!-- Filter Tabs -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-filter="all"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "all" || ViewBag.CurrentFilter == null ? "active" : "")">
                All Tasks
            </a>
            <a asp-action="Index" asp-route-filter="active"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "active" ? "active" : "")">
                Active
            </a>
            <a asp-action="Index" asp-route-filter="completed"
               class="btn btn-outline-primary @(ViewBag.CurrentFilter == "completed" ? "active" : "")">
                Completed
            </a>
        </div>
    </div>

    <!-- Desktop Table View (hidden on mobile) -->
    <div class="d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;">Status</th>
                        <th>Task</th>
                        <th style="width: 150px;">Created</th>
                        <th style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox"
                                               @(item.IsCompleted ? "checked" : "")
                                               onchange="this.form.submit()">
                                    </div>
                                </form>
                            </td>
                            <td>
                                <div>
                                    <strong class="@(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="text-muted mb-0 small">@item.Description</p>
                                    }
                                </div>
                            </td>
                            <td class="text-muted small">
                                @item.CreatedDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Card View (visible on mobile) -->
    <div class="d-md-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox"
                                   @(item.IsCompleted ? "checked" : "")
                                   onchange="document.getElementById('toggle-form-@item.Id').submit()">
                        </div>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                    <h5 class="card-title @(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h5>

                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="card-text text-muted">@item.Description</p>
                    }

                    <p class="card-text">
                        <small class="text-muted">Created: @item.CreatedDate.ToString("MMM dd, yyyy")</small>
                    </p>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-check2-circle display-1 text-muted"></i>
            <h3 class="mt-3">No tasks found</h3>
            <p class="text-muted">Add your first task by clicking "Add New Task"</p>
        </div>
    }
</div>

<!-- Delete Modals -->
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong>@item.Title</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Hidden form for toggling completion on mobile -->
@foreach (var item in Model)
{
    <form id="toggle-form-@item.Id" asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-none"></form>
}